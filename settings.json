{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "mcp__graphiti-memory__get_status",
      "mcp__graphiti-memory__search_nodes",
      "mcp__graphiti-memory__search_memory_facts",
      "mcp__graphiti-memory__add_memory",
      "mcp__graphiti-memory__get_episodes",
      "mcp__graphiti-memory__get_entity_edge",
      "mcp__graphiti-memory__delete_episode",
      "mcp__graphiti-memory__delete_entity_edge",
      "mcp__graphiti-memory__clear_graph",
      "Read(/tmp/claude/**)",
      "Edit(/tmp/claude/**)",
      "Write(/tmp/claude/**)",
      "Bash(mkdir -p /tmp/claude*)",
      "Bash(claude:*)",
      "Bash(sed -n:*)",
      "Bash(grep:*)",
      "Bash(~/.claude/scripts/check-merged-branch.sh:*)",
      "Bash(~/.claude/scripts/check-protected-branch.sh:*)",
      "Grep"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/my-notifier.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "TodoWrite|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/rule-enforcer.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/git-protection.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/rule-injector.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/pre-compact-snapshot.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/post-compact-restore.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "allowedTools": [
    "Edit(/tmp/claude/**)",
    "Write(/tmp/claude/**)",
    "Read(/tmp/claude/**)",
    "Bash(mkdir -p /tmp/claude*)",
    "Bash(claude *)",
    "Bash(sed -n *)",
    "Bash(grep *)",
    "Grep",
    "Bash(~/.claude/scripts/check-merged-branch.sh*)",
    "Bash(~/.claude/scripts/check-protected-branch.sh*)",
    "Bash(~/.claude/commands/scripts/general/get-pr-info.sh*)",
    "Bash(~/.claude/commands/scripts/github-coderabbitai-review-handler/get-coderabbit-comments.sh*)",
    "Bash(~/.claude/commands/scripts/github-pr-review/get-pr-diff.sh*)",
    "Bash(~/.claude/commands/scripts/github-pr-review/post-pr-inline-comment.sh*)",
    "Bash(~/.claude/commands/scripts/github-pr-review/get-claude-md.sh*)",
    "Bash(~/.claude/commands/scripts/github-review-handler/get-human-reviews.sh*)"
  ],
  "feedbackSurveyState": {
    "lastShownTime": 1754082998309
  }
}
