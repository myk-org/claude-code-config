{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_scriptsNote": "Script entries must be duplicated in both permissions.allow and allowedTools arrays. When adding new scripts, update BOTH locations.",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(/tmp/claude/**)",
      "Edit(/tmp/claude/**)",
      "Write(/tmp/claude/**)",
      "Bash(mkdir -p /tmp/claude*)",
      "Bash(claude:*)",
      "Bash(sed -n:*)",
      "Bash(grep:*)",
      "Bash(~/.claude/scripts/inject-claude.sh:*)",
      "Bash(~/.claude/scripts/reply-to-pr-review.sh:*)",
      "Bash(~/.claude/scripts/check-protected-branch.sh:*)",
      "Bash(~/.claude/scripts/check-merged-branch.sh:*)",
      "Bash(~/.claude/scripts/my-notifier.sh:*)",
      "Bash(uv run ~/.claude/scripts/rule-injector.py:*)",
      "Bash(uv run ~/.claude/scripts/post-compact-restore.py:*)",
      "Bash(uv run ~/.claude/scripts/rule-enforcer.py:*)",
      "Bash(uv run ~/.claude/scripts/git-protection.py:*)",
      "Bash(uv run ~/.claude/scripts/pre-compact-snapshot.py:*)",
      "Bash(~/.claude/commands/scripts/github-pr-review/get-claude-md.sh:*)",
      "Bash(~/.claude/commands/scripts/github-pr-review/get-pr-diff.sh:*)",
      "Bash(~/.claude/commands/scripts/github-pr-review/post-pr-inline-comment.sh:*)",
      "Bash(~/.claude/commands/scripts/general/get-pr-info.sh:*)",
      "Bash(~/.claude/commands/scripts/github-coderabbitai-review-handler/get-coderabbit-comments.sh:*)",
      "Bash(~/.claude/commands/scripts/github-review-handler/get-human-reviews.sh:*)",
      "Grep"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/my-notifier.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "TodoWrite|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/rule-enforcer.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/git-protection.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are a security gate protecting against catastrophic OS destruction. Analyze: $ARGUMENTS\n\nALWAYS ALLOW (whitelisted):\n- Commands starting with: ~/.claude/scripts/, ~/.claude/commands/scripts/\n\nBLOCK if the command would:\n- Delete system directories: /, /boot, /etc, /usr, /bin, /sbin, /lib, /var, /home\n- Write to disk devices: dd to /dev/sda, /dev/nvme, etc.\n- Format filesystems: mkfs on any device\n- Remove critical files: /etc/fstab, /etc/passwd, /etc/shadow, kernel/initramfs\n- Recursive delete with sudo or as root\n\nASK (requires user confirmation) if:\n- Command uses sudo but is not clearly destructive\n- Deletes files outside system directories but looks risky\n\nALLOW all other commands - this gate only guards against OS destruction.\n\nRespond with JSON: {\"decision\": \"approve\" or \"block\" or \"ask\", \"reason\": \"brief explanation\"}",
            "timeout": 10000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/rule-injector.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/pre-compact-snapshot.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/scripts/post-compact-restore.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "allowedTools": [
    "Edit(/tmp/claude/**)",
    "Write(/tmp/claude/**)",
    "Read(/tmp/claude/**)",
    "Bash(mkdir -p /tmp/claude*)",
    "Bash(claude:*)",
    "Bash(sed -n:*)",
    "Bash(grep:*)",
    "Grep",
    "Bash(~/.claude/scripts/inject-claude.sh:*)",
    "Bash(~/.claude/scripts/reply-to-pr-review.sh:*)",
    "Bash(~/.claude/scripts/check-protected-branch.sh:*)",
    "Bash(~/.claude/scripts/check-merged-branch.sh:*)",
    "Bash(~/.claude/scripts/my-notifier.sh:*)",
    "Bash(uv run ~/.claude/scripts/rule-injector.py:*)",
    "Bash(uv run ~/.claude/scripts/post-compact-restore.py:*)",
    "Bash(uv run ~/.claude/scripts/rule-enforcer.py:*)",
    "Bash(uv run ~/.claude/scripts/git-protection.py:*)",
    "Bash(uv run ~/.claude/scripts/pre-compact-snapshot.py:*)",
    "Bash(~/.claude/commands/scripts/github-pr-review/get-claude-md.sh:*)",
    "Bash(~/.claude/commands/scripts/github-pr-review/get-pr-diff.sh:*)",
    "Bash(~/.claude/commands/scripts/github-pr-review/post-pr-inline-comment.sh:*)",
    "Bash(~/.claude/commands/scripts/general/get-pr-info.sh:*)",
    "Bash(~/.claude/commands/scripts/github-coderabbitai-review-handler/get-coderabbit-comments.sh:*)",
    "Bash(~/.claude/commands/scripts/github-review-handler/get-human-reviews.sh:*)"
  ],
  "feedbackSurveyState": {
    "lastShownTime": 1754082998309
  }
}
